<UserControl x:Class="CodeHubDesktop.Views.DialogService"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeHubDesktop.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:control="clr-namespace:CodeHubDesktop.Controls"
             xmlns:lang="clr-namespace:CodeHubDesktop.MultiLanguage.Language"
             xmlns:ext="clr-namespace:CodeHubDesktop.DynamicLanguage" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             ext:Translation.ResourceManager="{x:Static lang:Lang.ResourceManager}"
             mc:Ignorable="d"
             MinWidth="600"
             MaxHeight="400"
             MaxWidth="800"
             Height="300"
             d:DesignHeight="450" d:DesignWidth="800">
    <control:BindableAvalonEditor HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="{Binding SnippetScript, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" SyntaxHighlighting="{Binding Language}" WordWrap="True" ShowLineNumbers="True" Margin="10,15"/>
</UserControl>
